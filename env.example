# ========================================
# TTS Service 환경 설정 예시
# ========================================

# Azure Speech Service 인증 정보 (필수)
AZURE_SPEECH_KEY=your_azure_speech_subscription_key_here
AZURE_SPEECH_REGION=koreacentral

# 기본 TTS 설정
DEFAULT_VOICE=ko-KR-SunHiNeural
DEFAULT_RATE=0
DEFAULT_PITCH=0
DEFAULT_STYLE=neutral
DEFAULT_ROLE=narrator

# 음질 및 성능 설정
AUDIO_FORMAT=wav
SAMPLE_RATE=16000
BIT_DEPTH=16
CHANNELS=1

# 제한 설정
MAX_TEXT_LENGTH=5000
MAX_CONCURRENT_REQUESTS=20
TIMEOUT_SECONDS=60

# 로깅 설정
LOG_LEVEL=INFO
ENABLE_AUDIO_LOGS=false
LOG_FORMAT=json

# 서버 설정
HOST=0.0.0.0
PORT=8003
WORKERS=1

# 캐시 설정
ENABLE_CACHE=true
CACHE_SIZE=100
CACHE_TTL=3600

# 헬스체크 설정
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
